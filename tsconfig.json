{
    "compilerOptions": {
        "target": "es6",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "CommonJS",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "noImplicitAny": false,
        "sourceMap": true,
        "downlevelIteration": true,
        "jsx": "react"
    },
    "include": ["jsx/**/*"],
    "exclude": ["node_modules"]
}
